{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2015","dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".", // Где сам проект находится
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}